    # Resets head position
    #
    lhead              @mol   # h0
    call
    #
    # Updates cur atom index
    #
    right                     # m1
    right                     # m2
    load
    inc                       # ax=cur atom index
    save               @mol
    #
    # Checks if it's last atom
    #
    mol                       # bx=last atom idx
    load                      # ax=cur atom idx
    ifg
      #
      # Joins all atoms together
      #
      mol
      toggle
      sub              @mol
      inc                     # ax=mol len
      toggle                  # bx=mol len
      len
      toggle                  # ax=mol len
      dec
      loop             @mol
        toggle                # ax=cur atom
        dec
        toggle
      end
      left
      0                @mol
      save
      right
    end
    rhead                     # h1
    left                      # m1
  end                  @mol
  lhead                       # h0
end
